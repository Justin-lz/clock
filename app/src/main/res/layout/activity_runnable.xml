<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

  <LinearLayout
      android:id="@+id/ll_body"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >

        <EditText
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:background="@drawable/btn3"
            android:hint="请设置总时长：(min)"
            android:inputType="text|number"
            android:paddingLeft="10dp"
            android:textColor="#7E71FA"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_settime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tbn4"
            android:text="确定" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_runnable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/tbn5"
        android:layout_marginTop="5dp"
        android:text="开始倒计时"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="24sp" />
  </LinearLayout>

    <com.example.clock.widget.TextProgressCircle
        android:id="@+id/tpc_progress"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />

</LinearLayout>